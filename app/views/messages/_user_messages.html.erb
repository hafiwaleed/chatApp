<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<% @messages.each do |message| %>
    			<% if message.body %>
    				<% if message.user.name == current_user.name %>
    					<div class="col-sm-10">
    						<h4><%= message.user.name %></h4>
    						<p class="bg-success text-left">
   								<%= message.body%> <br>
    							<%= message.message_time %>
    						</p>	
    					</div>
    				<% else %>
    					<div class="col-sm-10 col-sm-offset-2">
    						<h4 class="text-right"><%= message.user.name %></h4>
    						<p class="bg-danger text-right">
   								<%= message.body %> <br>
    							<%= message.message_time %>
    						</p>
    						
    					</div>
    				<% end %>
    			<% end %>
    		<% end %>
		</div>
	</div>
</div>


<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<%= bootstrap_form_for [@conversation, @message] do |f| %>
				<div class="field">
					<%= f.text_area :body,
									class: 'form-control',
									placeholder: "Your message" %>
				</div>

				<div class="col-sm-3">
					<%= f.submit "Send", class: 'form-control btn-success'%>
				</div>
			<% end %>
		</div>
	</div>
</div>